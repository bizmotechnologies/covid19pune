<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="false"
    android:background="@color/colorWhite"
    tools:context=".source.postlogin.features.locate_patient.fragments.LocationFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/actionbar"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:padding="@dimen/margin_medium"
            android:id="@+id/close_dialog"
            android:tint="@color/colorBlack"
            android:layout_height="wrap_content"/>
        <com.policeapp.framework.Widgets.AppRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_20sp"
            android:textStyle="bold"
            android:text="Select Location"/>
    </LinearLayout>

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_below="@id/actionbar"
        android:layout_above="@id/bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom"
        android:clickable="true"
        android:background="@color/lightBackgroundColor"
        android:padding="@dimen/margin_medium"
        android:orientation="vertical">
        <com.policeapp.framework.Widgets.AppRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_12sp"
            android:textColor="@color/darkTextColor"
            android:text="Long press and move the marker if needed"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/margin_medium">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <com.policeapp.framework.Widgets.AppRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkTextColor"
                    android:textStyle="bold"
                    android:text="Latitude"/>
                <com.policeapp.framework.Widgets.AppRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightTextColor"
                    android:layout_marginTop="@dimen/margin_tiny"
                    android:id="@+id/txtLatitude"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <com.policeapp.framework.Widgets.AppRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkTextColor"
                    android:textStyle="bold"
                    android:text="Longitude"/>
                <com.policeapp.framework.Widgets.AppRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightTextColor"
                    android:id="@+id/txtLongitude"
                    android:layout_marginTop="@dimen/margin_tiny"/>
            </LinearLayout>
        </LinearLayout>
        <com.policeapp.framework.Widgets.AppButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_regular"
            android:background="@drawable/regular_button"
            android:text="Done"
            android:textColor="@color/colorWhite"
            android:id="@+id/btnDone"/>
    </LinearLayout>
</RelativeLayout>