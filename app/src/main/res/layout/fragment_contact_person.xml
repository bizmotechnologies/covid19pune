<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#55000000"
    android:elevation="2dp"
    tools:context=".source.postlogin.features.locate_patient.fragments.ContactPersonFragment">

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/actionbar"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:padding="@dimen/margin_medium"
            android:id="@+id/close_dialog"
            android:tint="@color/colorBlack"
            android:layout_height="wrap_content"/>
        <com.policeapp.framework.Widgets.AppRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_20sp"
            android:textStyle="bold"
            android:text="Contacted Person"/>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/actionbar"
        android:layout_above="@id/divider"
        android:id="@+id/recycler"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:id="@+id/divider"
        android:background="@color/lightTextColor"
        android:layout_above="@id/input_view"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/lightBackgroundColor"
        android:id="@+id/input_view"
        android:padding="@dimen/margin_medium">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Person Name"
                android:imeOptions="actionNext"
                android:inputType="textPersonName|textCapWords"
                android:singleLine="true"
                android:nextFocusForward="@+id/person_contact"
                android:textSize="@dimen/font_14sp"
                android:id="@+id/person_name"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_14sp"
                android:hint="Mobile Number"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:digits="0123456789"
                android:maxLength="10"
                android:nextFocusForward="@+id/person_address"
                android:singleLine="true"
                android:id="@+id/person_contact"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:textSize="@dimen/font_14sp"
                android:inputType="textPostalAddress|textCapSentences"
                android:imeOptions="actionDone"
                android:id="@+id/person_address"/>
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:orientation="horizontal">
            <com.policeapp.framework.Widgets.AppButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/button_regular"
                android:text="Close"
                android:textAllCaps="false"
                android:id="@+id/btn_done"
                android:background="@drawable/disable_button_bg"
                android:textColor="@color/colorWhite"/>
            <com.policeapp.framework.Widgets.AppButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/button_regular"
                android:layout_marginLeft="@dimen/margin_medium"
                android:text="Add"
                android:textAllCaps="false"
                android:id="@+id/btn_add_person"
                android:background="@drawable/regular_button"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>