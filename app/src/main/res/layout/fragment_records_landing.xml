<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="com.policeapp.source.postlogin.features.records.fragments.RecordsLandingFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_medium">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.policeapp.framework.Widgets.AppRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_20sp"
                android:textColor="@color/darkTextColor"
                android:text="Latest Record"
                android:layout_weight="1"
                android:textStyle="bold"/>
            <com.policeapp.framework.Widgets.AppButton
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_height="@dimen/button_small"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/margin_xsmall"
                android:id="@+id/btn_logout"
                android:textSize="@dimen/font_12sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/regular_button"
                android:text="Logout"/>
        </LinearLayout>

        <com.policeapp.framework.Widgets.AppRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_12sp"
            android:textColor="@color/darkTextColor"
            android:text="List of the most affected zones as per the data available"
            android:alpha="0.5"
            android:textStyle="bold"/>
    </LinearLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:id="@+id/swipe_refresh"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_xlarge"
            android:clipToPadding="false"
            android:id="@+id/record_recycler"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>
