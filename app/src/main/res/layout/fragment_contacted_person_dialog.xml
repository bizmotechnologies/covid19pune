<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.policeapp.source.postlogin.features.records.dialogs.ContactedPersonDialog">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="@dimen/margin_medium"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <com.policeapp.framework.Widgets.AppRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_18sp"
                android:textStyle="bold"
                android:id="@+id/personName"
                android:text="Contacted Person"
                android:textColor="@color/colorWhite"/>
            <com.policeapp.framework.Widgets.AppRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_14sp"
                android:textColor="@color/colorWhite"
                android:text="List of contacted persons"
                android:alpha="0.5"
                android:textStyle="bold"/>
        </LinearLayout>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_close"
            android:padding="12dp"
            android:tint="@color/colorWhite"
            android:id="@+id/close"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorWhite"/>
    <com.policeapp.framework.Widgets.AppRegularTextView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:text="No contacted person found"
        android:id="@+id/emptyMessage"
        android:gravity="center"
        android:background="@color/colorWhite"
        android:textSize="@dimen/font_12sp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:id="@+id/recycler"/>

</LinearLayout>
