<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/headerHeight"
        android:id="@+id/lower_menu_container"
        android:layout_alignParentBottom="true"
        android:background="@drawable/tabbar_background"
        android:orientation="horizontal">

        <com.policeapp.framework.Widgets.AppButton
            android:id="@+id/locate_patient"
            android:layout_width="0dp"
            android:layout_height="@dimen/headerHeight"
            android:background="@android:color/transparent"
            android:layout_weight="0.40"
            android:padding="4dp"
            android:scaleType="centerInside"
            android:drawableTop="@drawable/ic_location"
            android:text="Locate Patient"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_10sp"
            android:textAllCaps="false"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"/>
        <com.policeapp.framework.Widgets.AppButton
            android:id="@+id/record_tab"
            android:layout_width="0dp"
            android:layout_height="@dimen/headerHeight"
            android:background="@android:color/transparent"
            android:layout_weight="0.40"
            android:padding="4dp"
            android:scaleType="centerInside"
            android:drawableTop="@drawable/ic_menu"
            android:text="Records"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_10sp"
            android:textAllCaps="false"
            />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/child_app_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_above="@id/lower_menu_container"
        android:background="@color/colorWhite"
        />

    <ImageButton
        android:id="@+id/home_tab"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/home_button"
        android:padding="4dp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/home_btn_red_1"
        android:textAllCaps="false"
        />

</RelativeLayout>